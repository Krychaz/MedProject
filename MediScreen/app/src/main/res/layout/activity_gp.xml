<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GpActivity">


    <EditText
        android:id="@+id/gpNameEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/gpName"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/gpSetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/gpAddressEdditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/gpAddress"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/gpSetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpNameEditText"
        app:layout_constraintVertical_bias="0.269" />

    <Button
        android:id="@+id/gpSetButton"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginBottom="140dp"
        android:text="@string/setGP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gpHead"
        android:textColor="@color/colorPrimary"
        android:textSize="72px"
        app:layout_constraintBottom_toTopOf="@+id/gpNameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646" />


</androidx.constraintlayout.widget.ConstraintLayout>
